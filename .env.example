# Exemple de fichier .env
# Copiez ce fichier en .env et remplissez les valeurs

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Configuration
POSTGRES_DB=marketing_bot
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Database URL (construite à partir des variables ci-dessus)
DATABASE_URL=postgresql+asyncpg://admin:admin123@postgres:5432/marketing_bot

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration (utilisez votre domaine en production)
# En développement local :
# VITE_API_URL=http://localhost/api
# En production :
VITE_API_URL=https://axynis.cloud/api
