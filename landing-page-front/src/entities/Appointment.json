{
  "name": "Appointment",
  "type": "object",
  "properties": {
    "full_name": {
      "type": "string",
      "description": "Nom complet du client"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email du client"
    },
    "phone": {
      "type": "string",
      "description": "Num\u00e9ro de t\u00e9l\u00e9phone"
    },
    "company": {
      "type": "string",
      "description": "Nom de l'entreprise"
    },
    "preferred_date": {
      "type": "string",
      "format": "date",
      "description": "Date souhait\u00e9e pour le rendez-vous"
    },
    "preferred_time": {
      "type": "string",
      "description": "Heure pr\u00e9f\u00e9r\u00e9e"
    },
    "message": {
      "type": "string",
      "description": "Message ou notes suppl\u00e9mentaires"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "confirmed", "completed", "cancelled"],
      "default": "pending",
      "description": "Statut du rendez-vous"
    }
  },
  "required": ["full_name", "email", "phone"]
}
